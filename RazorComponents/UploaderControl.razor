<div class="divFlex" style="height: 100px">
	<div class="divFlexLabel">
		<label class="labelStatus" for="@ID">@(Placeholder.NullOrWhiteSpace() ? "&nbsp;" : Placeholder.EndsWith(":") ? Placeholder : $"{Placeholder}:")</label>
	</div>
	<div class="divFlexSmall divValidators" style="@($"display: {(SetFlex ? "flex" : "block")}; height: auto; margin-top: 10px;")">
		<div class="uploadDocument" style="width: 100%">
			<SfUploader AllowedExtensions="@AllowedExtensions" AllowMultiple="@Multiple" AutoUpload="@AutoUpload" ID="@ID" MaxFileSize="10 * 1024 * 1024" SequentialUpload="@SequentialUpload">
				<UploaderEvents BeforeUpload="BeforeUpload" FileSelected="FileSelected" OnActionComplete="AfterUpload" OnRemove="OnRemove" ValueChange="OnFileUpload"></UploaderEvents> @**@
			</SfUploader>
		</div>
		<div>
			@ChildContent
		</div>
	</div>
</div>
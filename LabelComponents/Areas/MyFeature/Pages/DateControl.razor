@if (CreateDivTag)
{
	<div class="divFlex">
		<div class="divFlexLabel">
			<label class="labelStatus" for="@ID">@(Placeholder.NullOrWhiteSpace() ? "&nbsp;" : Placeholder.EndsWith(":") ? Placeholder : $"{Placeholder}:")</label>
		</div>
		<div class="divFlexSmall">
			<SfDatePicker CssClass="@CssClass" DayHeaderFormat="DayHeaderFormats.Abbreviated" Depth="CalendarView.Month" FirstDayOfWeek="1" FloatLabelType="FloatLabelType.Never" Format="MM/dd/yyyy" ID="@ID" Max="@Max" Min="@Min"
						  OnFocus="DTFocus" Placeholder="@Placeholder" Readonly="@Readonly" @ref="DateBox" ShowClearButton="false" ShowTodayButton="true" StrictMode="true" TValue="DateTime" ValidateOnInput="@ValidateOnInput" 
						  Value="@Value" ValueChanged="ValueChanged" ValueExpression="@ValueExpression" Width="@Width">
				<DatePickerEvents OnClose="OnClose" OnOpen="OnOpen" TValue="DateTime" ValueChange="OnChange"></DatePickerEvents>
			</SfDatePicker>
			@if (CreateTooltip)
			{
				<SfTooltip CloseDelay="0" OnOpen="ToolTipOpen" OpenDelay="0" OpensOn="Hover" Position="Position.TopCenter" Target="@("#" + ID)" Width="100%" WindowCollision="true">
					<ContentTemplate>
						<ValidationMessage For="@ValidationMessage" />
					</ContentTemplate>
				</SfTooltip>
			}
		</div>
	</div>
}
else
{
	<SfDatePicker CssClass="@CssClass" DayHeaderFormat="DayHeaderFormats.Abbreviated" Depth="CalendarView.Month" FirstDayOfWeek="1" FloatLabelType="FloatLabelType.Never" Format="MM/dd/yyyy" ID="@ID" Max="@Max" Min="@Min" 
				  OnFocus="DTFocus" Placeholder="@Placeholder" Readonly="@Readonly" @ref="DateBox" ShowClearButton="false" ShowTodayButton="true" StrictMode="true" TValue="DateTime" ValidateOnInput="@ValidateOnInput" 
				  Value="@Value" ValueChanged="ValueChanged" ValueExpression="@ValueExpression" Width="@Width">
		<DatePickerEvents OnClose="OnClose" OnOpen="OnOpen" TValue="DateTime" ValueChange="OnChange"></DatePickerEvents>
	</SfDatePicker>
	@if (CreateTooltip)
	{
		<SfTooltip CloseDelay="0" OnOpen="ToolTipOpen" OpenDelay="0" OpensOn="Hover" Position="Position.TopCenter" Target="@("#" + ID)" Width="100%" WindowCollision="true">
			<ContentTemplate>
				<ValidationMessage For="@ValidationMessage" />
			</ContentTemplate>
		</SfTooltip>
	}
}
<SfDialog Header="@HeaderString" Height="370px" IsModal="true" MinHeight="370px" @ref="Dialog" Target="#divTarget" Visible="false" Width="400px">
	<ChildContent>
		<SfSpinner CssClass="spinnerHeight" @ref="Spinner" Type="SpinnerType.Fabric" ZIndex="12000" />
		<DialogPositionData X="right" Y="center"></DialogPositionData>
		<DialogAnimationSettings Effect="DialogEffect.SlideRight"></DialogAnimationSettings>
		<DialogEvents OnOpen="OpenDialog"></DialogEvents>
		<EditForm Model="Model" OnValidSubmit="SaveTaxTerm" @ref="EditTaxTermForm">
			<FluentValidationValidator />
			<div class="divContainerTable">
				<TextBoxControl @bind-Value="@(Model.Code)" @bind-Value:event="ValueChanged" CreateDivTag="true" CreateTooltip="true" ID="textTermCode" MaxLength="1" MinLength="1"
								Multiline="false" Placeholder="Tax Term Code" Readonly="@(HeaderString.StartsWith("Edit"))" ValidationMessage="@(() => Model.Code)" />
				<TextBoxControl @bind-Value="@(Model.Text)" @bind-Value:event="ValueChanged" CreateDivTag="true" CreateTooltip="true" ID="textTermText" MaxLength="50" MinLength="1"
                Multiline="false" Placeholder="Tax Term Code" ValidationMessage="@(() => Model.Text)" /> 
				<SwitchControl @bind-BindValue="@(Model.IsEnabled)" ID="checkedEnabled" OffLabel="INACTIVE" OnLabel="ACTIVE" Placeholder="Tax Term Status?" />
			</div>
			<DialogFooter Cancel="Cancel" CancelMethod="CancelTaxTerm" @ref="DialogFooter" Save="Save" />
		</EditForm>
	</ChildContent>
</SfDialog>
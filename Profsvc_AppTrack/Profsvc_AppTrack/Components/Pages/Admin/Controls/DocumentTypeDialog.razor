<SfDialog Header="@HeaderString" Height="300px" IsModal="true" MinHeight="300px" @ref="Dialog" Target="#divTarget" Visible="false" Width="400px">
	<ChildContent>
		<SfSpinner CssClass="spinnerHeight" @ref="Spinner" Type="SpinnerType.Fabric" ZIndex="12000" />
		<DialogPositionData X="right" Y="center"></DialogPositionData>
		<DialogAnimationSettings Effect="DialogEffect.SlideRight"></DialogAnimationSettings>
		<DialogEvents OnOpen="OpenDialog"></DialogEvents>
		<EditForm Model="@Model" OnValidSubmit="SaveDocType" @ref="EditDocType">
			<FluentValidationValidator />
			<div class="divContainerTable">
				<TextBoxControl @bind-Value="@(Model.DocType)" @bind-Value:event="ValueChanged" Created="NoSpecialCharacters" CreateDivTag="true" CreateTooltip="true" ID="textText" MaxLength="50" MinLength="1"
								Multiline="false" Placeholder="@Placeholder" ValidationMessage="@(() => Model.DocType)" />
			</div>
			<DialogFooter Cancel="Cancel" CancelMethod="CancelDocType" @ref="DialogFooter" Save="Save" />
		</EditForm>
	</ChildContent>
</SfDialog>
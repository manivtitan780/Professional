<SfDialog AllowPrerender="true" IsModal="true" MinHeight="85vh" @ref="Dialog" ShowCloseIcon="true" style="height: 85vh" Target="#divTarget" Visible="false" Width="75vw" ID="dialogWord">
    @**@
	<DialogTemplates>
		<Header>@($"Document: {DocumentName} ({DocumentLocation})")</Header>
		<Content>
			<SfSpinner CssClass="spinnerHeight" @ref="Spinner" Type="SpinnerType.Fabric" ZIndex="12000" />
            <SfDocumentEditorContainer EnableToolbar="true" Height="calc(85vh - 44px)" ID="documentWordViewer" @ref="EditorDocument" RestrictEditing="true" ShowPropertiesPane="false" ToolbarItems="_items">
				<DocumentEditorContainerEvents OnToolbarClick="ToolbarClicked"></DocumentEditorContainerEvents>
			</SfDocumentEditorContainer>
		</Content>
	</DialogTemplates>
	<DialogPositionData X="center" Y="center" />
	<DialogAnimationSettings Duration="500" Effect="DialogEffect.Fade" />
	<DialogEvents OnOpen="Opening" OnOverlayModalClick="OverlayClick" Opened="OpenDialog"></DialogEvents>
</SfDialog>
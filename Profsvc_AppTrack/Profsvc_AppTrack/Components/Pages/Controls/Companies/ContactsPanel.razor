<div class="experienceContainerBox contactBox">
	<div>
		<div>
			<SfGrid AllowPaging="false" DataSource="@Model" EnableHeaderFocus="true" EnableHover="true" Height="200px" ID="gridExperience" @ref="GridContacts" RowHeight="@RowHeight" SelectedRowIndex="0"
					TValue="CompanyContact" Width="99%">
				<GridSelectionSettings EnableToggle="false" Mode="SelectionMode.Row" Type="SelectionType.Single"></GridSelectionSettings>
				<GridEvents RowSelected="RowSelected" TValue="CompanyContact" />
				<GridColumns>
					<GridColumn Field="@nameof(CompanyContact.FirstName)" HeaderText="Degree" Width="20%" />
					<GridColumn Field="@nameof(CompanyContact.ID)" HeaderText="ID" IsPrimaryKey="true" Visible="false" Width="0" />
					<GridColumn HeaderText="Duration" Width="20%">
						<Template Context="aCon">
							@{
								if (aCon is CompanyContact _con)
								{
									<span>@(_con.EmailAddress)</span>
								}
							}
						</Template>
					</GridColumn>
					<GridColumn Field="@nameof(CompanyContact.Phone)" HeaderText="Location" Width="20%"></GridColumn>
					<GridColumn Field="@nameof(CompanyContact.Title)" HeaderText="Title" Width="20%"></GridColumn>
					<GridColumn Field="@nameof(CompanyContact.UpdatedBy)" HeaderText="Updated By" Width="20%"></GridColumn>
					<GridColumn Width="10%">
						<Template Context="bCon">
							@{
								if (bCon is CompanyContact _con) // /*&& (_con.UpdatedBy == UserName || _con.CreatedBy == UserName)*/)
								{
									<SfButton Content="" IconCss="editIconInner" @onclick="() => EditContactDialog(_con.ID)" />
									<SfButton Content="" IconCss="deleteIconInner" @onclick="() => DeleteContactMethod(_con.ID)" />
								}
							}
						</Template>
					</GridColumn>
				</GridColumns>
			</SfGrid>
		</div>
	</div>
</div>
@page "/"
@layout BlankLayout
@attribute [StreamRendering]

<div id="navBar">
	<img alt="Logo" src="images/logo.png" style="height: 50px; width: 63px;" />
	<label class="labelHeader">Applicant Tracking System</label>
</div>

<EditForm EditContext="@EditContext" OnValidSubmit="CheckLogin" @ref="LoginForm">
	<DataAnnotationsValidator />
	<div class="loginTable">
		<div class="loginRow">
			<label class="labelInfo">Login to Applicant Tracking System</label>
		</div>
		<div class="loginRow">
			<TextBoxControl @bind-Value="@ModelLoginClass.UserName" @bind-Value:event="ValueChanged" CreateDivTag="false" CreateTooltip="true" ID="textUserName" MaxLength="10" MinLength="1"
							Placeholder="User Name" ValidationMessage="@(() => ModelLoginClass.UserName)" />
		</div>
		<div class="loginRow">
			<TextBoxControl @bind-Value="@ModelLoginClass.Password" @bind-Value:event="ValueChanged" CreateDivTag="false" CreateTooltip="true" ID="textPassword" MaxLength="16" MinLength="1"
							Placeholder="Password" TextBoxType="InputType.Password" ValidationMessage="@(() => ModelLoginClass.Password)" />
		</div>
		<div class="loginRow center" style="margin-top: 50px;">
			<SfButton IsPrimary="true" type="submit">Login</SfButton>
		</div>
	</div>
</EditForm>